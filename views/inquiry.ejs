<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/images/bdcc.jpg" type="image/x-icon">
    <title>Inquiry Page</title>
     
    <link rel="stylesheet" href="/index.css">
    <link rel="stylesheet" href="/inquiry.css">
</head>
<body>
    <header class="dark">
        <div class="a">
            <div class="d-flex align-items-center align-self-center justify-content-between">
                <nav>
                    <div class="logo">
                        BIG DREAMS CAR
                    </div>
                </nav>

            </div>
        </div>

    </header>   

    <div class="container" style="margin-top: 10px;">

        <form action="/inquiryy" method="post" autocomplete="on"> 
      <p style="font-size: 40px;">Inquiry Form</p>
      <!-- <p style="color: red; font-weight: 400;">Note : If you have an username then you sent a request for inquiry.</p> -->
          <label for="fname">Full Name</label>
          <input type="text" id="uname"  name="uname"  placeholder="Enter Full Name.." required>
    
          <label for="lname">Test Driving Date</label>
          <input type="date" id="date" name="date" required>

          <label for="Email">Email</label>
          <input type="email" id="email" name="email" placeholder="Your Email.."  required>

          <label for="Mobile">Mobile</label>
          <input type="tel" id="Mobile" name="Mobile" placeholder="Your Mobile number.." maxlength="10" minlength="10" required>
      
          <label for="cars">Cars</label>
          <select id="cars" name="car_name">
            <% car.forEach(item => { %>
              <option value="<%= item.car %>"><%= item.car_name %></option>
            <% }); %>
          </select>
      
          <label for="anyquery">Any Query</label>
          <textarea id="Query" name="Query" placeholder="Write Any Query.." required style="height:200px"></textarea>
      
          <button type="submit" class=" btn btn-secondary btn-outline-dark px-5 text-white">Click</button>
      
        </form>


        

      </div>
</body>
</html>