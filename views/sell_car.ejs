<body>
    <div class="container-fluid">
        
        <div class="header_photo">
            <img src="/images/background.jpg" alt="" srcset="" class="img-fluid imgtag">
        </div>

        <div>
            <div class=" sell_car">
                <h2>Sell your car with BBT</h2>
                <form action="/sell_car" method="post">
                    <div class="user-box">
                        <input type="text" name="username" autocomplete="off" required="">
                        <label>Username</label>
                    </div>
                    <div class="user-box">
                        <input type="text" name="car_name" autocomplete="off" required="">
                        <label>Car name</label>
                    </div>
                    <div class="user-box">
                        <input type="number" name="Km" autocomplete="off" required="">
                        <label>Km</label>
                    </div>
                    <select class="user-box w-100 text-white bg-transparent mb-5 border-0 border-bottom" autocomplete="off"  id="exampleInputEmail1">
                            <option value="Petrol" class="text-dark">Petrol</option>
                            <option value="Diesel" class="text-dark">Diesel</option>
                            <option value="Electric" class="text-dark">Electric</option>
                    </select>
                    <div class="user-box">
                        <input type="number" name="Ownership" autocomplete="off" required="" maxlength="2" minlength="2">
                        <label>Ownership</label>
                    </div>
                    <div class="user-box">
                        <input type="text" name="reg_year" autocomplete="off" required="" maxlength="4" minlength="4">
                        <label>Registration Year</label>
                    </div>
                    <div class="user-box">
                        <input type="file" name="car_photos" autocomplete="off" required="">
                    </div>

                    <button type="submit" class="border-0 btn btn-dark btnn">
                        <a href="/"></a>
                        <span></span>
                        <span></span>
                        <span></span>
                        <span></span>
                        Submit
                    </button>
                </form>
            </div>
        </div>

    </div>
</body>

</html>